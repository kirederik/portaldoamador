<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="http://www.portaldoamador.com.br/simulados/img/timao_small.png" class="img-circle" alt="Portal do Amador" />
      </div>
      <div class="pull-left info">
        <p><%= current_user.fullname.capitalize %></p>
        <!-- Status -->
        <%= link_to "Logout", destroy_user_session_path %>
      </div>
    </div>


    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">Header</li>
        <!-- Optionally, you can add icons to the links -->
        <li class="<%= is_active('link') %>"><a href="#"><i class='fa fa-link'></i> <span>Link</span></a></li>
      <li><a href="#"><i class='fa fa-link'></i> <span>Another Link</span></a></li>
      <li class="treeview <%= is_active("users") %>">
        <a href="#" id="users-handler"><i class='fa fa-link'></i> <span>Usu√°rios</span> <i class="fa fa-angle-left pull-right"></i></a>
        <ul class="treeview-menu">
          <li><%= link_to "Novo", new_user_path %></li>
          <li><a href="#">Link in level 2</a></li>
        </ul>
      </li>
    </ul><!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
